{
  "name": "railroad-inc-ai",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "husky install",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "tc": "npx tsc --noEmit",
    "tc:watch": "npx tsc --noEmit --watch",
    "test": "jest",
    "format": "prettier --write .",
    "watch-css": "tailwindcss -i tailwind.source.css -o styles/tailwind.css --watch",
    "reset-db": "ts-node -T src/backend/setup"
  },
  "dependencies": {
    "immutable": "^4.0.0",
    "knex": "^1.0.3",
    "next": "^12.1.0",
    "pg": "^8.7.3",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "tsconfig-paths": "^4.0.0",
    "use-debounce": "^8.0.1"
  },
  "devDependencies": {
    "@types/uuid": "^8.3.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.18",
    "@types/react": "^18.0.12",
    "eslint": "8.9.0",
    "eslint-config-next": "12.1.0",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.23",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.7.0"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 80
  },
  "jest": {
    "preset": "ts-jest",
    "moduleNameMapper": {
      "^app/(.*)$": "<rootDir>/$1",
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@@/(.*)$": "<rootDir>/$1"
    }
  }
}
